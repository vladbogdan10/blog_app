<% include ../partials/header.ejs %>
<% include ../partials/admin-sidebar.ejs %>
 
  <div class="ui container top-spacing">
    <h1 style="text-align: center;">Edit Blog &quot;<%= blog.title %>&quot; </h1>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>">
      </div>
      <div class="field">
        <label>Image URL</label>
        <input type="text" name="blog[image]" value="<%= blog.image %>">
      </div>
      <div class="field">
        <label>Category</label>
        <input type="text" name="blog[category]" value="<%= blog.category %>">
      </div>
      <div class="field">
        <textarea id="blog-texteditor" name="blog[body]"> <%= blog.body %> </textarea>
      </div>
      <input class="ui teal button" type="submit">
    </form>
  </div>

 <% include ../partials/footer.ejs %>